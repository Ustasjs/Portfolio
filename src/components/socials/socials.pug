mixin socials(type, className)
  ul.socials(class=className ? className : '')
    li.social__item
      a.social__icon(target="_blank", rel="nofollow noopener", href="https://ru-ru.facebook.com/people/%D0%A1%D1%82%D0%B0%D0%BD%D0%B8%D1%81%D0%BB%D0%B0%D0%B2-%D0%A3%D1%81%D1%82%D1%8E%D0%B6%D0%B0%D0%BD%D0%B8%D0%BD/100012321937974")
        if type == 'round'
          include ./icons/fb_round.svg
        else
          include ./icons/fb.svg
    li.social__item
      a.social__icon(target="_blank", rel="nofollow noopener", href="https://t.me/U_stas")
        if type == 'round'
          include ./icons/telegram_round.svg
        else
          include ./icons/telegram.svg
    li.social__item
      a.social__icon.social__icon_gh(target="_blank", rel="nofollow noopener", href="https://github.com/Ustasjs")
        if type == 'round'
          include ./icons/github_round.svg
        else
          include ./icons/github.svg
        
    